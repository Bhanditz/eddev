!!! 5
%html{:lang => I18n.locale}
  %head
    %title EOL Learning + Education
  
    %meta{:charset => "UTF-8"}

    = stylesheet_link_tag 'reset', :media => 'all'

    %link{:rel => "stylesheet", :type => "text/css", :href => "//cdn.jsdelivr.net/jquery.slick/1.6.0/slick.css"}
    %link{:rel => "stylesheet", :type => "text/css", :href => "//cdn.jsdelivr.net/jquery.slick/1.6.0/slick-theme.css"}
    %link{:rel => "stylesheet", :type => "text/css", :href => "https://maxcdn.bootstrapcdn.com/font-awesome/4.6.1/css/font-awesome.min.css"}
    %link{:href=> "https://fonts.googleapis.com/css?family=Open+Sans:300,400,600,700", :rel => "stylesheet"}

    = stylesheet_link_tag 'lesson_plan_icons'
    = stylesheet_link_tag 'application', :media => 'all'

    -if asset_exists? "#{params[:controller]}.css"
      = stylesheet_link_tag params[:controller], :media => 'all'
    = javascript_include_tag 'application'

    -if asset_exists? "#{params[:controller]}.js"
      = javascript_include_tag params[:controller]

    =javascript_include_tag "card_templates/trait.js"


    %script{:src => "https://d3js.org/d3.v3.js", :charset => "utf-8"}
    %script{:src => "https://cdnjs.cloudflare.com/ajax/libs/handlebars.js/4.0.5/handlebars.min.js"}
    %script{:type => "text/javascript", :src => "//cdn.jsdelivr.net/jquery.slick/1.6.0/slick.min.js"}

    = favicon_link_tag
    = csrf_meta_tags
    %meta{:name => "viewport", :content => "width=device-width,initial-scale=1"}
  %body
