<p id="notice"><%= notice %></p>

<h1>Listing Gallery Photos</h1>

<table>
  <thead>
    <tr>
      <th>Image</th>
      <th>Author</th>
      <th>Caption</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @gallery_photos.each do |gallery_photo| %>
      <tr>
        <td><%= gallery_photo.image_file_name %></td>
        <td><%= gallery_photo.author %></td>
        <td><%= gallery_photo.caption %></td>
        <td><%= gallery_photo.user.user_name %></td>
        <td><%= link_to 'Show', gallery_photo %></td>
        <td><%= link_to 'Edit', edit_gallery_photo_path(gallery_photo) %></td>
        <td><%= link_to 'Destroy', gallery_photo, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

