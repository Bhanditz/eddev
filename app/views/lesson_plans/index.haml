= render "shared/intro_section", :header => "lesson_plans.index.intro_hdr",
  :paragraphs => [{:key => "lesson_plans.index.intro_p_html", :vars => {:cards_path => cards_path}}],
  :hideable => false
-#= render "shared/section_head", :title_key => "lesson_plans.index.featured_lesson_plans"
-#%ul.featured-lesson-plans<
  = render "featured", :order => "first",
    :grade_level => 1,
    :icons => [:card],
    :category => "energy_flow",
    :title_key => "what_is_classification"
  = render "featured", :order => "second",
    :grade_level => 1,
    :icons => [:tree, :card, :stats],
    :category => "adaptations",
    :title_key => "animal_classification"
  = render "featured", :order => "third",
    :grade_level => 2,
    :icons => [:tree],
    :category => "science_skills",
    :title_key => "plant_classification"
  = render "featured", :order => "fourth",
    :grade_level => 3,
    :icons => [:tree, :card, :stats],
    :category => "classification",
    :title_key => "thats_classified"

.subject-key-block>
  = render "shared/section_head", :title_key => "lesson_plans.index.subjects"
  .category-key.subject-key#SubjectKey>
    .subject.first<>
      = image_tag "lesson_plans/classification_icon.jpg", :class => "subject-icon"
      .subject-name= t ".classification"
    .subject.second<>
      = image_tag "lesson_plans/science_skills_icon.jpg", :class => "subject-icon"
      .subject-name= t ".science_skills"
    .subject.third<>
      = image_tag "lesson_plans/human_impact_icon.jpg", :class => "subject-icon"
      .subject-name= t ".human_impact"
    .subject.fourth<>
      = image_tag "lesson_plans/adaptations_icon.jpg", :class => "subject-icon"
      .subject-name= t ".adaptations"
    .subject.fifth<>
      = image_tag "lesson_plans/energy_flow_icon.jpg", :class => "subject-icon"
      .subject-name= t ".energy_flow"

.icon-key-block>
  = render "shared/section_head", :title_key => "lesson_plans.index.learning_perks"
  .category-key.icon-key#IconKey
    .icon-row<>
      %i.icon.icon-stats
      .icon-desc= t ".bio_stats"
    .icon-row<>
      %i.icon.icon-tree
      .icon-desc= t ".field_work"
    .icon-row<>
      %i.icon.icon-card
      .icon-desc= t ".species_cards"

= render "shared/section_head", :title_key => "lesson_plans.index.lesson_plans"
.all-lesson-plans
  .grade-level
    #GradeLevelMenu1.grade-level-bar.grade-level-1
      %span= t ".grades_2_5"
      %i{:class => "fa fa-chevron-down chevron", "aria-hidden" => true}
    %ul.lesson-plan-list
      -grade_1_lessons.each_with_index do |lesson, index|
        =render "regular", :lesson => lesson, :index => index, :total => grade_1_lessons.length, :category => 1
  .grade-level
    #GradeLevelMenu2.grade-level-bar.grade-level-2
      %span= t ".grades_6_8"
      %i{:class => "fa fa-chevron-down chevron", "aria-hidden" => true}
    %ul.lesson-plan-list
      -grade_2_lessons.each_with_index do |lesson, index|
        =render "regular", :lesson => lesson, :index => index, :total => grade_2_lessons.length, :category => 2
  .grade-level.last
    #GradeLevelMenu3.grade-level-bar.grade-level-3
      %span= t ".grades_9_12"
      %i{:class => "fa fa-chevron-down chevron", "aria-hidden" => true}
    %ul.lesson-plan-list
      -grade_3_lessons.each_with_index do |lesson, index|
        =render "regular", :lesson => lesson, :index => index, :total => grade_3_lessons.length, :category => 3
