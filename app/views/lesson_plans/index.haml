= render "shared/intro_section", :header => "lesson_plans.index.intro_hdr",
  :paragraphs => [{:key => "lesson_plans.index.intro_p_html", :vars => {:cards_path => cards_path}}],
  :hideable => false

.subject-key-block>
  = render "shared/section_head", :title_key => "lesson_plans.index.themes"
  .category-key.subject-key#SubjectKey>
    - @ordered_themes.each_with_index do |theme, index|
      %div{:class => "subject #{theme_order_class_for_index(index)}"}<>
        = image_tag theme.icon_path, :class => "subject-icon"
        .subject-name= theme.localized_name

.icon-key-block>
  = render "shared/section_head", :title_key => "lesson_plans.index.learning_perks"
  .category-key.icon-key#IconKey
    - @ordered_perks.each do |perk|
      .icon-row<>
        %i{:class => "icon icon-#{perk.icon_name}"}
        .icon-desc= perk.localized_name

= render "shared/section_head", :title_key => "lesson_plans.index.lesson_plans", :id => "AllLessonPlansHdr"
.all-lesson-plans
  - grade_0_lessons = @grade_levels.first.lesson_plans
  - grade_1_lessons = @grade_levels.second.lesson_plans
  - grade_2_lessons = @grade_levels.third.lesson_plans

  .grade-level
    #GradeLevelMenu0.grade-level-bar.grade-level-0{:'data-grade-id' => 0}
      %span= @grade_levels.first.localized_name
      %i{:class => "fa fa-chevron-down chevron", "aria-hidden" => true}
    %ul.lesson-plan-list
      - grade_0_lessons.each_with_index do |lesson, index|
        = render "regular", :lesson => lesson, :index => index, :total => grade_0_lessons.length, :category => 0
  .grade-level
    #GradeLevelMenu1.grade-level-bar.grade-level-1{:'data-grade-id' => 1}
      %span= @grade_levels.second.localized_name
      %i{:class => "fa fa-chevron-down chevron", "aria-hidden" => true}
    %ul.lesson-plan-list
      - grade_1_lessons.each_with_index do |lesson, index|
        = render "regular", :lesson => lesson, :index => index, :total => grade_1_lessons.length, :category => 1
  .grade-level.last
    #GradeLevelMenu2.grade-level-bar.grade-level-2{:'data-grade-id' => 2}
      %span= @grade_levels.third.localized_name
      %i{:class => "fa fa-chevron-down chevron", "aria-hidden" => true}
    %ul.lesson-plan-list
      - grade_2_lessons.each_with_index do |lesson, index|
        = render "regular", :lesson => lesson, :index => index, :total => grade_2_lessons.length, :category => 2
