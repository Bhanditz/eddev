= render "shared/intro_section", :header => "lesson_plans.index.intro_hdr",
  :paragraphs => [{:key => "lesson_plans.index.intro_p_html", :vars => {:cards_path => cards_path}}],
  :hideable => false

.subject-key-block>
  = render "shared/section_head", :title_key => "lesson_plans.index.themes"
  .category-key.subject-key#SubjectKey>
    - @ordered_themes.each_with_index do |theme, index|
      %div{:class => "subject #{theme_order_class_for_index(index)}"}<>
        = image_tag theme.icon_path, :class => "subject-icon"
        .subject-name= theme.localized_name

.icon-key-block>
  = render "shared/section_head", :title_key => "lesson_plans.index.learning_perks"
  .category-key.icon-key#IconKey
    - @ordered_perks.each do |perk|
      .icon-row<>
        %i{:class => "icon icon-#{perk.icon_name}"}
        .icon-desc= perk.localized_name

= render "shared/section_head", :title_key => "lesson_plans.index.lesson_plans", :id => "AllLessonPlansHdr"
.all-lesson-plans
  - grade_0_lessons = @grade_levels.first.lesson_plans
  - grade_1_lessons = @grade_levels.second.lesson_plans
  - grade_2_lessons = @grade_levels.third.lesson_plans

  = render partial: "grade_level", locals: { bar_class: "grade-level-0", name: @grade_levels.first.localized_name, lessons: grade_0_lessons, category_id: 0 }
  = render partial: "grade_level", locals: { bar_class: "grade-level-1", name: @grade_levels.second.localized_name, lessons: grade_1_lessons, category_id: 1 }
  = render partial: "grade_level", locals: { top_class: "last", bar_class: "grade-level-2", name: @grade_levels.third.localized_name, lessons: grade_2_lessons, category_id: 2 }

