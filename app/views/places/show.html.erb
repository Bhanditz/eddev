<p id="notice"><%= notice %></p>

<%= editable_tag(:h1, "main_header", @place, :class => "place-header") %>
<%= editable_tag(:div, "place_description", @place, :class => "place-desc") %>

<div class="place-admin">
  <div class="place-pub-status">
    <b>Published in:</b>&nbsp;<%= published_locales(@place) %>
  </div>

  <% if !@place.habitats.empty? %>
    <h2>Habitats</h2>
    <table>
      <thead>
        <tr>
          <th>Name</th>
          <th>Published</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @place.habitats.each do |habitat| %>
          <% if habitat.published_in_cur_locale? || cur_user_may_edit?(habitat) %>
            <tr>
              <td><%= habitat.name %></td>
              <td><%= published_locales(habitat) %></td>
              <td><%= link_to 'Show', place_habitat_path(@place, habitat) %></td>

              <% if cur_user_owns?(@place) %>
                <td><%= link_to 'Edit', edit_place_habitat_path(@place, habitat) %></td>
                <td><%= link_to 'Destroy', place_habitat_path(@place, habitat), method: :delete, data: { confirm: 'Are you sure?' } %></td>
              <% end %>
            </tr>
          <% end %>
        <% end %>
      </tbody>
    </table>
  <% end %>

  <% if cur_user_owns?(@place) %>
    <%= link_to 'Add a habitat', new_place_habitat_path(@place), :class => "place-add-habitat" %>
  <% end %>

  <div class="place-edit-links">
    <% if logged_in_user.admin? %>
      <%= link_to 'Edit', edit_place_path(@place) %> |
    <% end %>

    <% if cur_user_owns?(@place) %>
      <%= link_to 'User permissions', place_place_permissions_path(@place) %>
    <% end %>
  </div>
</div>

<%= link_to 'Back', places_path %></br></br>

