.form-wrap
  %h1.hdr= t(".header")

  - if @error_msg
    #error_explanation= @error_msg

  = form_tag forgot_password_path, :class => "form" do
    .field
      = label_tag :user_name, nil, :class => "label"
      = text_field_tag :user_name, nil, :class => "input"

    .actions
      = submit_tag t(".submit"), :class => "submit"
