.l-form-box
  %h1= t(".change_password")

  = render "errors"

  = form_for(@user,
    { :html => { :class => "form" },
      :url => { :action => :change_password } }) do |f|
    = f.password_field :current_password, :class => "input block", :placeholder => t(".current_password")
    = render :partial => "password_fields", :locals => { :f => f }

    = f.submit t(".change_password"), :class => "submit block"
