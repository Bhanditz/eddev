%h1= t(".sign_up")

= form_for(@user) do |f|
  = render "errors"
  
  .field
    = f.label :email
    = f.email_field :email, :required => true

  .field
    = f.label :user_name
    = f.text_field :user_name,
        :pattern  => User::USER_NAME_PATTERN, 
        :required => true, 
        :title    => t_model_error(:user, :user_name, :invalid)

  .field
    = f.label :full_name
    = f.text_field :full_name, :required => true
  
  = render :partial => "password_fields", :locals => { :f => f}

  .actions
    = f.submit t(".sign_up")

