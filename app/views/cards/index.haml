= render "shared/intro_section", :header => "cards.index.cards_hdr",
  :paragraphs => [{ :key => "cards.index.compare_and_learn_html", 
  :vars => { :how_to_use_id => "HowToUseIntro", 
  :lesson_plans_path => lesson_plans_path,
  :contact_url => "http://eol.org/contact_us?subject=learning"}}],
  :hideable => false
= render "shared/section_head", :title_key => "cards.index.featured_decks"
%ul.featured-decks<
  = render "featured", :class_str => "first",
    :image_name => "bioblitz_common",
    :desc_key => "bioblitz_common",
    :color => "blue",
    :file_name => "bioblitz"
  = render "featured", :class_str => "second",
    :image_name => "okaloosa_bio",
    :desc_key => "okaloosa_bio",
    :color => "orange",
    :file_name => "okaloosa_biodiversity"
  = render "featured", :class_str => "third",
    :image_name => "ne_urban",
    :desc_key => "ne_urban",
    :color => "pink",
    :file_name => "ne_urban"
  = render "featured", :class_str => "fourth trait-card",
    :image_name => "blank",
    :desc_key => "blank_cards",
    :color => "gray",
    :file_name => "blank_species_card_packet"
= render "shared/section_head", :title_key => "cards.index.all_decks"
%ul.all-decks<
  - all_decks.each_with_index do |deck, index|
    = render "deck", :deck => deck, :index => index

= render "shared/section_head", :title_key => "cards.index.how_to_use", :id => "HowToUseIntro"
.how-to-use
