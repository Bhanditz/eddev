    = render "how_to_section", :hdr_key => "build_food_chains",
      :content_key => "explore_different_food",
      :lp_key => "food_chains_rummy_html",
      :lp_path => "#",
      :additional_class => "first"
    = render "how_to_section", :hdr_key => "explore_adaptations",
      :content_key => "some_card_decks",
      :lp_key => "go_adapt_html",
      :lp_path => "#",
      :additional_class => "second"
    = render "how_to_section", :hdr_key => "classify",
      :content_key => "sort_cards",
      :lp_key => "thats_classified_html",
      :lp_path => "#",
      :additional_class => "third"
    = render "how_to_section", :hdr_key => "create_your_own",
      :content_key => "print_our_blank",
      :lp_key => "create_a_creature_html",
      :lp_path => "#",
      :additional_class => "fourth"
  .example-cards<
    .example-card-wrap.first>
      = image_tag "cards/example_newt.png", :class => "example-card"
      .caption= t ".example_species_card"
    .example-card-wrap.second>
      = image_tag "cards/example_key.png", :class => "example-card"
      .caption= t ".species_card_key"
  .cards-idea-contact= t ".have_a_great_idea_html", :contact_url => "http://eol.org/contact_us?subject=learning"

