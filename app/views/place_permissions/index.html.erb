<p id="notice"><%= notice %></p>

<h1>Listing Place Permissions</h1>

<table>
  <thead>
    <tr>
      <th>User name</th>
      <th>Role</th>
      <th colspan="2"></th>
    </tr>
  </thead>

  <tbody>
    <% @place_permissions.each do |place_permission| %>
      <tr>
        <td><%= place_permission.user.user_name %></td>
        <td><%= place_permission.role %>
        <td><%= link_to 'Edit', edit_place_place_permission_path(@place, place_permission) %></td>
        <td><%= link_to 'Destroy', place_place_permission_path(@place, place_permission), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Place permission', new_place_place_permission_path %></br></br>
<%= link_to 'Back', place_path(@place) %>
