.navbar-outer.js-navbar.js-fixed
  .navbar.navbar-top<
    .navbar-inner
      .l-abs-l
        .nav-menu.nav-menu-eol
          = link_to home_path, :class => "home-lnk" do
            = image_tag "welcome/eol_logo.png", :class => "eol-logo"
            %i.fa.fa-caret-down.nav-menu-caret
          %ul.eol-dropdown
            %li.eol-link.selected
              = link_to t(".eol_nav.l_and_e"), home_path
            %li.eol-link
              = link_to t(".eol_nav.eol"), "http://www.eol.org"
        = render :partial => "shared/lang_select", :locals => { :extra_class => "lang-menu-nav" }
      .l-abs-r
        .nav-user
          = render :partial => "shared/user_links", :locals => { :top_class => "user-links-nav" }
          .nav-user-menu-toggle.js-slide-menu-toggle
            %i.fa.fa-bars.fa-lg
          %ul.nav-user-menu.is-hidden.js-nav-user-menu
            %li.nav-user-menu-lang.js-nav-user-menu-lang
              %span= t("language")
              %i.fa.fa-caret-down
              %i.fa.fa-caret-up
            = render :partial => "shared/lang_select", :locals => { :extra_class => "nav-user-menu-lang-menu" }
            -if logged_in_user
              %li
                = link_to(logged_in_user.user_name, account_path)
              %li
                = link_to(t("shared.header.sign_out"), logout_path)
            -else
              %li
                = link_to(t("shared.header.sign_in"), login_path)
      %h1#Title.title 
        = t ".main_title"
  .navbar.navbar-bottom<
    .navbar-inner
      %ul.nav-links
        %li= link_to("Biodiversity Cards", card_maker_path)
        %li= link_to("Lesson Plans", lesson_plans_path)
        %li= link_to("Podcasts", podcasts_path)
        %li= link_to("Google Earth Tours", earth_tours_path)
        %li= link_to("Biodiversity Articles", "http://eol.org/info/discover_articles")
        %li Partner Resources
