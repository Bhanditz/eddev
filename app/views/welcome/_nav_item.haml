- last = local_assigns.fetch :last, false
- two_line_bar = local_assigns.fetch :two_line_bar, false

%li{:class => "nav-item #{width}-width" + (last ? " last" : "")}
  %a{ :href => href }
    .img-wrap
      =nav_image image_name
      .nav-overlay 
        = t ".desc.#{text_key}"
      %div{:class => "bar" + (two_line_bar ?  " two-line" : "")}
        = t ".title.#{text_key}"
